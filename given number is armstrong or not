#include<stdio.h>
#include<math.h>
int main()
{
	int num,onum,rem,n=0,result=0;
	printf("enter an integer:");
	scanf("%d",&num);
	onum=num;
	for(onum=num;onum!=0;++n)
	{
		onum/=10;
	}
	for(onum=num;onum!=0;onum/=10)
	{
		rem=onum%10;
		result+=pow(rem,n);
	}
	if((int)result==num)
	printf("%d is an armstrong number.",num);
	else
	printf("%d is not an armstrong number.",num);
	return 0;
}

OUTPUT:
enter an integer:4
4 is an armstrong number
