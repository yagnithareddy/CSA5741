#include<stdio.h>
int main()
{
	int num;
	printf("enter a number:");
	scanf("%d",&num);
	if(num==0)
	printf("%d is neither a positive,nor a negative number \n",num);
	else if(num>=0)
	printf("%d is a positive number \n",num);
	else
	printf("%d is a negative number \n",num);
	return 0;
}


OUTPUT:
enter a number:12
12 is a positive number
